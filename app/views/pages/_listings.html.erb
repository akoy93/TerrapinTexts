<% @listings.each do |l| %>
  <tr>
    <td><%= image_tag l[:thumbnail], alt: "thumbnail", width: "75" %></td>
    <td><%= l[:isbn] %></td>
    <td><%= l[:title] %></td>
    <td><%= l[:author] %></td>
    <td><%= l[:publisher] %></td>
    <td><%= l[:publication_year] %></td>
    <td><%= condition_to_s l[:condition] %></td>  
    <td class="price"><%= number_to_currency(l[:price]) %></td>
    <td><%= l[:description_of_condition] %></td>
    <% if l[:uid] == current_user.uid %>
      <td><center>You<br /><%= image_tag(current_user.image, alt: "profile_picture") %></center></td>
    <% else %>
      <td><center><strong><%= l[:name] %></strong><br /><br />
        <%= link_to (image_tag 'fb-glyphicon.png', alt: "fb icon"), "http://www.facebook.com/#{l[:uid]}" %> 
        <%= link_to (image_tag 'mail-glyphicon.png', alt: "mail icon"), "mailto:#{l[:email]}" %></center></td>
    <% end %>
  </tr>
<% end %>
