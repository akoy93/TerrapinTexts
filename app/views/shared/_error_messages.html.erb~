<% unless params[:errors].nil? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      The form contains <%= pluralize(params[:errors].size, "error") %>.
      <br />
      <ul>
        <% params[:errors].each do |msg| %>
          <li>* <%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

