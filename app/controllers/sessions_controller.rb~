class SessionsController < ApplicationController
  def create
    user = User.from_omniauth(env["omniauth.auth"])
    session[:user_id] = user.id
    me = FbGraph::User.new('me', :access_token => session[:omniauth]["credentials"]["token"])
    puts "7298"
    me.friend_lists.inspect
    current_user.friends_list = me.friend_lists
    redirect_to buy_url
  end

  def destroy
    session[:user_id] = nil
    redirect_to root_url
  end
end
